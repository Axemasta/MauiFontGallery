<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiFontGallery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="http://schemas.myapp.com/2023/fonts"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:pages="clr-namespace:MauiFontGallery.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiFontGallery">
    <Shell.FlyoutHeader>
        <ContentView
            Padding="20"
            BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                              Dark={StaticResource OffBlack}}"
            HeightRequest="150">
            <Image
                HorizontalOptions="Fill"
                Source="app_icon"
                VerticalOptions="Fill">
                <Image.Behaviors>
                    <mct:IconTintColorBehavior TintColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Primary}}" />
                </Image.Behaviors>
            </Image>
        </ContentView>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Font Awesome">
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="{x:Static fonts:FontConstants.FontAwesomeFreeBrands}"
                Glyph="{x:Static fonts:FontAwesomeIcons.FontAwesome}"
                Color="{AppThemeBinding Light={StaticResource Black},
                                        Dark={StaticResource White}}" />
        </FlyoutItem.Icon>

        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate pages:FontAwesomePage}"
                Route="FontAwesomePage"
                Title="Font Awesome" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Material Symbols">
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="{x:Static fonts:FontConstants.MaterialSymbolsOutlined}"
                Glyph="{x:Static fonts:FontAwesomeIcons.Google}"
                Color="{AppThemeBinding Light={StaticResource Black},
                                        Dark={StaticResource White}}" />
        </FlyoutItem.Icon>

        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate pages:MaterialSymbolsPage}"
                Route="MaterialSymbolsPage"
                Title="Material Symbols" />
        </Tab>
    </FlyoutItem>
</Shell>
